<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
   tools:context="pt12.frigidarium.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/text_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView_lang"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_lang"
        android:layout_marginTop="24dp"
        android:text="@string/qr_info"
        />

    <Button
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <ImageView android:id="@+id/image_qr"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/button_share"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_prompt"
        android:layout_below="@+id/text_lang"
        android:layout_alignParentStart="true" />



</RelativeLayout>
